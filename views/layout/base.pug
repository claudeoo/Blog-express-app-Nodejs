doctype html
html
    head
        title= pageTitle

        block css
            link(rel="stylesheet"
                href="/bootstrap-4.1.3-dist/css/bootstrap.min.css" type="text/css") 
            //-  boostrap.min.css permet d'avoir tout les autres on les utilise si on a besoin d'une partie de boostrap
           
    body(class="container-fluid")
        div(class="row justify-content-center")
            div(class="col-10")
                div(class="row")

                    header(class="col-12")
                        block header
                            h1= titleDefault
                            
                    nav(class="col-3")
                        block nav
                            div(class="list-group")
                                ul
                                    li(class="list-group-item d-flex justify-content-between align-items-center bg-light")
                                        a(href="/"  class="list-group-item-action" style="color:black;") Acceuil
                                    li(class="list-group-item d-flex justify-content-between align-items-center bg-light")
                                        a(href="/contact"  class="list-group-item-action"  style="color:black;") Contact
                                    li(class="list-group-item d-flex justify-content-between align-items-center bg-light")
                                        a(href="/inscription"  class="list-group-item-action"  style="color:black;") Inscription
                                    li(class="list-group-item d-flex justify-content-between align-items-center bg-light")
                                        a(href="/login" class="list-group-item-action"  style="color:black;") Login

                    div(class="col-9")
                        block content
                
                    footer(class="col-12")
                        block footer
                            P &copy; copyright 

        block js
            script(src="/jquery/jquery-3.3.1.min.js")
            script(src="/bootstrap-4.1.3-dist/js/bootstrap.min.js")
                